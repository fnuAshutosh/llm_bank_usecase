# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=banking-llm
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/banking_llm
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600

# Ollama (Local Development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b
OLLAMA_TIMEOUT=300

# Together.ai (Cloud Inference)
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-2-34b-chat-hf

# RunPod (Training)
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_TEMPLATE_ID=

# Model Configuration
MODEL_MAX_LENGTH=4096
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_TOP_K=50

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=your_encryption_key_32_bytes_here

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# PII Detection
PII_DETECTION_ENABLED=true
PII_DETECTION_THRESHOLD=0.85
PII_MASK_CHAR=*

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=logs/audit.log
DATA_RETENTION_DAYS=2555  # 7 years

# Feature Flags
ENABLE_FRAUD_DETECTION=true
ENABLE_KYC_SCREENING=true
ENABLE_MULTI_LANGUAGE=false
ENABLE_HALLUCINATION_DETECTION=true

# Email (for escalations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@bankingllm.com

# Slack (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Cloud Storage
S3_BUCKET=banking-llm-models
S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Google Cloud (for Colab integration)
GCP_PROJECT_ID=your_gcp_project
GCP_CREDENTIALS_PATH=config/gcp-credentials.json
